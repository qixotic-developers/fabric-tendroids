{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Stress Test Configuration",
  "description": "Defines automated stress test scenarios for finding performance ceilings",
  
  "test_settings": {
    "duration_per_scenario": 15.0,
    "fps_sample_interval": 0.5,
    "warmup_duration": 3.0,
    "target_fps": 30.0,
    "log_file": "stress_test_results.log"
  },
  
  "scenarios": [
    {
      "name": "Baseline_15",
      "description": "Current production baseline",
      "tendroid_count": 15,
      "bubbles_enabled": false
    },
    {
      "name": "Scale_20",
      "description": "33% increase in Tendroid count",
      "tendroid_count": 20,
      "bubbles_enabled": false
    },
    {
      "name": "Scale_25",
      "description": "67% increase in Tendroid count",
      "tendroid_count": 25,
      "bubbles_enabled": false
    },
    {
      "name": "Scale_30",
      "description": "100% increase in Tendroid count",
      "tendroid_count": 30,
      "bubbles_enabled": false
    },
    {
      "name": "Bubbles_Single",
      "description": "Single Tendroid with bubble system",
      "tendroid_count": 1,
      "bubbles_enabled": true
    },
    {
      "name": "Bubbles_5",
      "description": "5 Tendroids with bubbles",
      "tendroid_count": 5,
      "bubbles_enabled": true
    },
    {
      "name": "Bubbles_10",
      "description": "10 Tendroids with bubbles",
      "tendroid_count": 10,
      "bubbles_enabled": true
    },
    {
      "name": "Bubbles_15",
      "description": "Production baseline with bubbles",
      "tendroid_count": 15,
      "bubbles_enabled": true
    },
    {
      "name": "Combined_30",
      "description": "Maximum load test: 30 Tendroids + bubbles",
      "tendroid_count": 30,
      "bubbles_enabled": true
    }
  ],
  
  "performance_thresholds": {
    "excellent": 50.0,
    "good": 40.0,
    "acceptable": 30.0,
    "poor": 20.0
  }
}
